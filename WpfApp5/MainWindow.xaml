<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="Добавить" FontSize="18" Margin="10" Click="Add_button" />
            <Button Content="Обновить" FontSize="18"  Margin="10" Click="Update_button"/>
            <TextBlock Margin="20" Padding="10">
                    <ComboBox Height="30" Width="150" Text="FDFD" SelectedIndex="0" ></ComboBox>
            </TextBlock>
            <TextBlock Margin="20" Padding="10">
                    <ComboBox Height="30" Width="150"></ComboBox>
            </TextBlock>
        </StackPanel>
        
    </Grid>
</Window>
